{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/echemdb/metadata-schema/main/schemas/autotag.json",
    "allOf": [{ "$ref": "#/definitions/Autotag" }],
    "definitions": {
        "Autotag": {
            "type": "object",
            "additionalProperties": true,
            "title": "Autotag",
            "description": "Complete metadata schema for auto-generated echemdb YAML, combining all metadata sections into a single comprehensive structure.",
            "properties": {
                "curation": {
                    "$ref": "curation.json#/definitions/Curation"
                },
                "echemdbLoader": {
                    "type": "string",
                    "description": "Loader or importer used to process the data into echemdb format.",
                    "example": "baseloader"
                },
                "eln": {
                    "$ref": "eln.json#/definitions/Eln"
                },
                "experimental": {
                    "$ref": "experimental.json#/definitions/Experimental"
                },
                "figureDescription": {
                    "$ref": "figure_description.json#/definitions/FigureDescription"
                },
                "project": {
                    "$ref": "projects.json#/definitions/Projects"
                },
                "system": {
                    "$ref": "system.json#/definitions/System"
                }
            },
            "required": [
                "curation",
                "eln",
                "experimental",
                "figureDescription",
                "system"
            ]
        }
    }
}
