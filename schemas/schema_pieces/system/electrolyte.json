{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/echemdb/metadata-schema/main/schemas/system/electrolyte.json",
    "allOf": [{ "$ref": "#/definitions/Electrolyte" }],
    "definitions": {
        "Electrolyte": {
            "type": "object",
            "title": "Electrolyte",
            "description": "The properties and components of the electrolyte solution.",
            "additionalProperties": false,
            "required": [
                "type"
            ],
            "properties": {
                "type": {
                    "type": "string",
                    "description": "Type of electrolyte defined by the solvent.",
                    "example": "aqueous",
                    "oneOf": [
                        {"const": "aqueous", "description": "The solvent is water."},
                        {"const": "ionic liquid", "description": "The solvent is an ionic liquid."},
                        {"const": "non-aqueous", "description": "The solvent is non-aqueous other than an ionic liquid, i.e., an organic compound."},
                        {"const": "solid", "description": "A solid electrolyte."}
                    ]
                },
                "electrolyteContainer": {
                    "description": "Container used to prepare or store the electrolyte before the measurement.",
                    "$ref": "#/definitions/ElectrolyteContainer"
                },
                "components": {
                    "type": "array",
                    "description": "Chemical components of the electrolyte including solvents, salts, acids, bases, and gases.",
                    "items": {
                        "$ref": "../general/component.json#/definitions/Component"
                    }
                },
                "ph": {
                    "description": "pH value of the electrolyte solution.",
                    "$ref": "../general/quantity.json#/definitions/Quantity"
                },
                "temperature": {
                    "description": "Temperature of the electrolyte during the experiment.",
                    "$ref": "../general/quantity.json#/definitions/Quantity"
                },
                "comment": {
                    "type": "string",
                    "description": "Additional notes or observations about the electrolyte.",
                    "example": "Electrolyte was not replaced between measurements."
                }
            }
        },
        "ElectrolyteContainer": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string",
                    "description": "The vessel in which the supplying electrolyte as prepared or stored before the measurement."
                },
                "components": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ElectrolyteContainerComponent"
                    }
                }
            },
            "title": "ElectrolyteContainer"
        },
        "ElectrolyteContainerComponent": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string",
                    "description": "A unique identifier."
                },
                "type": {
                    "type": "string",
                    "description": "The type of the container, i.e., a flask."
                },
                "comment": {
                    "type": "string"
                }
            }
        }
    }
}
