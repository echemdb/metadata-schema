{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/linuxrider/metadata-schema/draft-test/schemas/system.json",
    "allOf": [{ "$ref": "#/definitions/System" }],
    "definitions": {
        "System": {
            "type": "object",
            "additionalProperties": false,
            "title": "system",
            "properties": {
                "type": {
                    "type": "string",
                    "oneOf": [
                        {"const": "electrochemical", "description": "An electrochemical system"}
                    ]
                },
                "electrolyte": {
                    "$ref": "./system/electrolyte.json#/definitions/Electrolyte"
                },
                "electrodes": {
                    "type": "array",
                    "items": {
                        "$ref": "./system/electrode.json#/definitions/Electrode"
                    }
                },
                "electrochemicalCell": {
                    "$ref": "./system/electrochemical_cell.json#/definitions/ElectrochemicalCell"
                },
                "atmosphere": {
                    "$ref": "./system/atmosphere.json#/definitions/Atmosphere"
                }
            },
            "required": [
                "electrodes",
                "electrolyte",
                "type"
            ]
        }
    }
}
