{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/linuxrider/metadata-schema/draft-test/schemas/source.json",
    "allOf": [{ "$ref": "#/definitions/Source" }],
    "definitions": {
        "Source": {
            "type": "object",
            "title": "source",
            "additionalProperties": false,
            "required": [
                "citationKey",
                "url"
            ],
            "properties": {
                "citationKey": {
                    "type": "string"
                },
                "url": {
                    "$ref": "./general/url.json#/definitions/Url"
                },
                "techniques": {
                    "type": "array",
                    "contains": {
                        "type": "string"
                    }
                },
                "figure": {
                    "type": "string"
                },
                "bibdata": {
                    "type": "string"
                },
                "comment": {
                    "type": "string"
                },
                "curve": {
                    "type": "string"
                }
            }
        }
    }
}
